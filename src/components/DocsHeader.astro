---
import { LOGO_IMAGE, SITE } from "@config";
import LinkButton from "./LinkButton.astro";

export interface Props {
  activeNav?: "docs" | "services" | "search";
}

const { activeNav } = Astro.props;
---

<header class="docs-header">
  <a id="skip-to-content" href="#main-content">Skip to content</a>

  <div class="header-container">
    <!-- Mobile sidebar toggle -->
    <button
      id="sidebar-toggle"
      class="sidebar-toggle lg:hidden"
      aria-label="Toggle sidebar"
      type="button"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <line x1="3" y1="12" x2="21" y2="12"></line>
        <line x1="3" y1="6" x2="21" y2="6"></line>
        <line x1="3" y1="18" x2="21" y2="18"></line>
      </svg>
    </button>

    <!-- Logo -->
    <a href="/" class="logo">
      {
        LOGO_IMAGE.enable ? (
          <img
            src={`/assets/${LOGO_IMAGE.svg ? "logo.svg" : "logo.png"}`}
            alt={SITE.title}
            width={LOGO_IMAGE.width}
            height={LOGO_IMAGE.height}
          />
        ) : (
          SITE.title
        )
      }
    </a>

    <!-- Navigation -->
    <nav class="header-nav">
      <ul class="nav-list">
        <li>
          <a href="/docs/" class:list={[{ active: activeNav === "docs" }]}>
            Docs
          </a>
        </li>
        <li>
          <a
            href="/services/"
            class:list={[{ active: activeNav === "services" }]}
          >
            Services
          </a>
        </li>
        <li>
          <LinkButton
            href="/search/"
            className={`search-btn ${activeNav === "search" ? "active" : ""}`}
            ariaLabel="search"
            title="Search (Ctrl+K)"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="search-icon">
              <path
                d="M19.023 16.977a35.13 35.13 0 0 1-1.367-1.384c-.372-.378-.596-.653-.596-.653l-2.8-1.337A6.962 6.962 0 0 0 16 9c0-3.859-3.14-7-7-7S2 5.141 2 9s3.14 7 7 7c1.763 0 3.37-.66 4.603-1.739l1.337 2.8s.275.224.653.596c.387.363.896.854 1.384 1.367l1.358 1.392.604.646 2.121-2.121-.646-.604c-.379-.372-.885-.866-1.391-1.36zM9 14c-2.757 0-5-2.243-5-5s2.243-5 5-5 5 2.243 5 5-2.243 5-5 5z"
              ></path>
            </svg>
            <span class="sr-only">Search</span>
          </LinkButton>
        </li>
        {
          SITE.lightAndDarkMode && (
            <li>
              <button
                id="theme-btn"
                class="theme-btn"
                title="Toggle theme"
                aria-label="Toggle light and dark mode"
                aria-live="polite"
              >
                <svg xmlns="http://www.w3.org/2000/svg" id="moon-svg">
                  <path d="M20.742 13.045a8.088 8.088 0 0 1-2.077.271c-2.135 0-4.14-.83-5.646-2.336a8.025 8.025 0 0 1-2.064-7.723A1 1 0 0 0 9.73 2.034a10.014 10.014 0 0 0-4.489 2.582c-3.898 3.898-3.898 10.243 0 14.143a9.937 9.937 0 0 0 7.072 2.93 9.93 9.93 0 0 0 7.07-2.929 10.007 10.007 0 0 0 2.583-4.491 1.001 1.001 0 0 0-1.224-1.224zm-2.772 4.301a7.947 7.947 0 0 1-5.656 2.343 7.953 7.953 0 0 1-5.658-2.344c-3.118-3.119-3.118-8.195 0-11.314a7.923 7.923 0 0 1 2.06-1.483 10.027 10.027 0 0 0 2.89 7.848 9.972 9.972 0 0 0 7.848 2.891 8.036 8.036 0 0 1-1.484 2.059z" />
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" id="sun-svg">
                  <path d="M6.993 12c0 2.761 2.246 5.007 5.007 5.007s5.007-2.246 5.007-5.007S14.761 6.993 12 6.993 6.993 9.239 6.993 12zM12 8.993c1.658 0 3.007 1.349 3.007 3.007S13.658 15.007 12 15.007 8.993 13.658 8.993 12 10.342 8.993 12 8.993zM10.998 19h2v3h-2zm0-17h2v3h-2zm-9 9h3v2h-3zm17 0h3v2h-3zM4.219 18.363l2.12-2.122 1.415 1.414-2.12 2.122zM16.24 6.344l2.122-2.122 1.414 1.414-2.122 2.122zM6.342 7.759 4.22 5.637l1.415-1.414 2.12 2.122zm13.434 10.605-1.414 1.414-2.122-2.122 1.414-1.414z" />
                </svg>
              </button>
            </li>
          )
        }
      </ul>
    </nav>
  </div>
</header>

<style>
  #skip-to-content {
    @apply absolute -top-full left-16 z-50 bg-skin-accent px-3 py-2 text-skin-inverted transition-all focus:top-4;
  }

  .docs-header {
    @apply fixed left-0 right-0 top-0 z-50 border-b border-skin-line bg-skin-fill/95 backdrop-blur;
  }

  .header-container {
    @apply mx-auto flex h-16 max-w-7xl items-center justify-between gap-4 px-4;
  }

  .sidebar-toggle {
    @apply hidden h-10 w-10 items-center justify-center rounded-md
           text-skin-base transition-colors hover:bg-skin-card;
  }

  /* Only show on mobile (below lg breakpoint) */
  @media (max-width: 1023px) {
    .sidebar-toggle {
      @apply flex;
    }
  }

  .sidebar-toggle svg {
    @apply h-5 w-5 fill-transparent stroke-current;
  }

  .logo {
    @apply text-xl font-bold text-skin-base hover:text-skin-accent;
  }

  .header-nav {
    @apply flex items-center;
  }

  .nav-list {
    @apply flex items-center gap-1 sm:gap-2;
  }

  .nav-list li {
    @apply list-none;
  }

  .nav-list a {
    @apply rounded-md px-3 py-2 text-sm font-medium text-skin-base
           transition-colors hover:bg-skin-card hover:text-skin-accent;
  }

  .nav-list a.active {
    @apply bg-skin-card text-skin-accent;
  }

  .search-btn {
    @apply flex h-10 w-10 items-center justify-center rounded-md
           text-skin-base transition-colors hover:bg-skin-card;
  }

  .search-icon {
    @apply h-5 w-5;
  }

  .theme-btn {
    @apply flex h-10 w-10 items-center justify-center rounded-md
           text-skin-base transition-colors hover:bg-skin-card;
  }

  .theme-btn svg {
    @apply h-5 w-5 fill-skin-base;
  }

  .sr-only {
    @apply absolute h-px w-px overflow-hidden whitespace-nowrap border-0 p-0;
    clip: rect(0, 0, 0, 0);
  }
</style>

<script>
  // Keyboard shortcut for search
  function initSearchShortcut() {
    document.addEventListener("keydown", e => {
      if ((e.metaKey || e.ctrlKey) && e.key === "k") {
        e.preventDefault();
        window.location.href = "/search/";
      }
    });
  }

  initSearchShortcut();
</script>
